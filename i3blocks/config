[temperature]
command=sensors |grep -i package | awk '{print "" $4}'
interval=60
color=#4ba0fd

[cpuload]
command=uptime|awk '{print $(NF-2) $(NF-1) $NF}'
interval=60
color=#f22d0b

# Fetch the public IP address only on startup
[public-ip]
command=wget --no-proxy -qO - icanhazip.com|awk '{print $0}'
interval=once
color=#ca1852

