[time]
#markup=pango //for big/small font
command=LC_ALL="zh_CN.UTF-8" date '+%b%d日 (%A) %H:%M'
#command=date '+<big>%H</big>:%M<small>:%S</small>'
interval=1


# Guess the weather hourly
[weather]
#command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
#command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 17-|head -4|xargs echo|awk '{print $1 " " $2$3 "  "$5$6 "  " $7$8}'
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 17-|head -4|xargs echo |perl -pe 's/(\d+. *°C)(.*km\/h)\s+(\d+\s+km)/ $1    $2   $3/'
interval=3600
color=#A4C2F4

[aqi]
#command=~/.config/i3/bin/aqi | grep '北京'|awk '{print $1 $2 "<big>"$3"</big>" "<small>"$7 $8"</small>"}'
#command=~/.config/i3/bin/aqi | grep '北京'|awk '{$8=substr($8, 1, length($8)-1) ; print $1" "$2" "$3" / "$7 $8}'
command=~/.config/i3/bin/aqi | grep '北京'|awk '{$8=substr($8, 1, length($8)-1) ; print $2" "$3" / "$7 $8}'
#command= echo "<big>$USER</big>"
interval=900
color=#50cf28

